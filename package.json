{
  "name": "Simple-react-webpack-boilerplate",
  "description": "A slim webpack/react boilerplate without unnecessary fluff and stuff.",
  "version": "0.0.1",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "colors": "^1.1.2",
    "deep-merge": "^1.0.0",
    "del": "^2.2.0",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.0",
    "eslint-plugin-react": "^4.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "raw-loader": "^0.5.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.7",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  },
  "scripts": {
    "build": "npm install && babel-node ./tools/build",
    "clean": "babel-node --eval \"require('./tools/clean').default()\"",
    "copy": "babel-node --eval \"require('./tools/copy').default()\"",
    "bundle": "babel-node --eval \"require('./tools/bundle').default()\"",
    "development": "babel-node ./tools/development",
    "lint": "babel-node --eval \"require('./tools/eslint').default()\""
  }
}
